#!/bin/bash

# Ensure data.json exists
if [ ! -s data.json ]; then
    echo "Error: data.json not found or is empty"
    exit 1
fi

# Extract name, height (dm to m), weight (hg to kg), and type using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Capitalize
height_dm=$(jq '.height' data.json)
weight_hg=$(jq '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Convert height to meters, weight to kg
formatted_height=$(awk -v h="$height_dm" 'BEGIN {printf "%.1f", h/10}')
formatted_weight=$(awk -v w="$weight_hg" 'BEGIN {printf "%.1f", w/10}')

# Output in required human-readable format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

