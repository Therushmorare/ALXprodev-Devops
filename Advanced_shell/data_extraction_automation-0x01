#!/bin/bash

# Check if data.json exists
if [ ! -f data.json ]; then
    echo "Error: data.json not found. Please run the API automation script first."
    exit 1
fi

# Extract values using jq
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize
HEIGHT=$(jq -r '.height' data.json)
WEIGHT=$(jq -r '.weight' data.json)
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Convert height from decimetres to metres, weight from hectograms to kg
HEIGHT_METERS=$(awk -v h="$HEIGHT" 'BEGIN {printf "%.1f", h/10}')
WEIGHT_KG=$(awk -v w="$WEIGHT" 'BEGIN {printf "%.0f", w/10}')

# Output in human-readable format
echo "$NAME is of type $TYPE, weighs ${WEIGHT_KG}kg, and is ${HEIGHT_METERS}m tall."

